[
    {
      "name": "${container_name}",
      "image": "${image}",
      "cpu": ${container_cpu},
      "memory": ${container_memory},
      "networkMode": "${network_mode}",
      "essential": ${essential},
      "portMappings": [
        {
          "containerPort": ${container_port},
          "hostPort": ${host_port}
        }
      ],
      "logConfiguration":{
        "logDriver": "${log_driver}",
        "options": {
          "awslogs-group": "${awslogs_group}",
          "awslogs-region": "${awslogs_region}",
          "awslogs-stream-prefix": "${awslogs_stream_prefix}"
        }
      }
    } 
]